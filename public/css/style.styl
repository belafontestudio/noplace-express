@font-face {
    font-family: 'ATC Overlook';
    src: url('/fonts/ATCOverlook/EOT/ATCOverlook-Regular.eot');
    src: url('/fonts/ATCOverlook/EOT/ATCOverlook-Regular.eot?#iefix') format('embedded-opentype'),
         url('/fonts/ATCOverlook/WOFF/ATCOverlook-Regular.woff') format('woff'),
         url('/fonts/ATCOverlook/TTF/ATCOverlook-Regular.ttf') format('truetype'),
         url('/fonts/ATCOverlook/SVG/ATCOverlook-Regular.svg#ATCOverlook-Regular') format('svg');
    font-weight: normal;
    font-style: normal;

}
@font-face {
  font-family: 'youngserif';
  src: url('/fonts/youngserif/YoungSerif-Regular.eot');
  src: url('/fonts/youngserif/YoungSerif-Regular.eot?#iefix') format('embedded-opentype'),
       url('/fonts/youngserif/YoungSerif-Regular.woff') format('woff'),
       url('/fonts/youngserif/YoungSerif-Regular.ttf')  format('truetype'),
       url('/fonts/youngserif/YoungSerif-Regular.svg#31f7e7e56403a5dba26824b3cad8352d') format('svg');

  font-style:   normal;
  font-weight:  400;
}

scale = 0 400px 600px 800px 1050px

*
  font-family 'ATC Overlook'
  font-weight normal
html, body
  margin 0
  padding 0
  overflow-x hidden
  width 100%
  left 0
  right 0

#main
  overflow-x hidden
#cover
  lost-center 100% 0
  position relative


#scene3
  overflow hidden
ul#scene1, ul#scene2
  float left
  width 50%
  height 100%
  padding 0
  margin 0


  img
    width 100%

  li.girl
    height 800px
    overflow hidden
  img.girl
    width 50%

  img.one
    opacity 0.4

  img.two
    opacity 0.6
  img.three
    opacity 0.8

#scene3
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  padding 0
  margin 0
  li
    width 100%
    height 100%
  .logos
    margin 20% auto
    display block
    width 277px
  img
    width 277px
    height auto
  .np,.ci
    position absolute

  .ci
    display none
#vision
  lost-center 50% 0
  text-align center


  h1
    margin-top 100px
    margin-bottom 50px
    font-size 28px
    font-family youngserif

#mission
  lost-center 70% 0

  h2

    margin-top 50px
    text-align left
    font-size 20px
    margin-bottom 100px

#change-issue
  lost-center 80% 0
  margin-bottom 80px
  .left


    lost-column 5/5
    line-height 36px
    h2
      font-size 30px
      font-family youngserif
    p
      font-size 22px
  a.ibook
    margin 0 auto
    width 150px
    display block

  .right
    lost-column 5/5
  img
    width 100%
#social
  lost-center 50% 0
  text-align center
  margin-top 50px
  margin-bottom 100px
  a
    padding 0 10px
    text-decoration none
    color silver
    &:hover
      color black
#footer
  lost-center 50% 0
  text-align center
#instagram-feed
  lost-center 70% 0

.instagram
  lost-column 1/2
  float left
  position relative
  font-family sans-serif
  margin-top 30px
  &:hover
    .hover
      display block
  &:nth-child(even)
    img
      float left
  &:nth-child(odd)
    img
      float right
  img
    width auto
    max-width 100%
  .hover
    display none
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    .bkgr
      background-color white
      opacity 0.5
      position absolute
      top 0
      left 0
      right 0
      bottom 0
    .text

      position relative
      z-index 10
      text-align center
      color black
      padding 60px
      p
        font-family youngserif
        font-size 28px
      h3
        font-size 18px

/*  SUBSCRIBE */

#subscribe
  margin-top 100px
  lost-center 50% 0

  h3

    text-align center
    font-size 22px
    font-family youngserif

  #form
    text-align center
    margin 85px 0
    .email
      width 300px
      padding 5px
      padding-left 0
      border 0
      border-bottom 4px solid black
      font-size .9em
      &:focus
        outline: none
    .submit
      color grey
      border 0
      border-bottom 4px solid black
      border-radius 0
      background white
      padding 5px 10px
      cursor pointer
      &:focus
        outline: none
      &:hover
        opacity .95



  #success
    display none
    text-align center
  #error
    display none
    text-align center


+desktop()
  #scene3
    .logos
      width 554px
    img
      width 554px
  #change-issue
    margin-top 50px
    margin-bottom 100px
    lost-center 80% 0
    .left
      lost-column 2/5
      margin-top 65px
      a.ibook
        margin 0
    .right
      lost-column 3/5
